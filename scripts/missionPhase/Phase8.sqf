//------------------------------------------------------------------------\\
//---------------------------------FASE 8---------------------------------\\
//-------------------Arribada a zona extracció jugadors-------------------\\
//------------------------------------------------------------------------\\

//------------------------------------------------------------------------\\
//----------------COMPLETAR TASQUES I ASSIGNAR LA SEGÜENT-----------------\\
//------------------------------------------------------------------------\\

if (triggerActivated phase6) then {["tsk_mExtP","SUCCEEDED"] call BIS_fnc_taskSetState;}

//------------------------------------------------------------------------\\
//---------------------------TASCA ALTERNATIVA----------------------------\\
//------------------------------------------------------------------------\\
 
 else {["tsk_mExtPAlt","SUCCEEDED"] call BIS_fnc_taskSetState;};

 //------------------------------------------------------------------------\\
//-----------------------ASSIGNAR LA SEGÜENT TASCA------------------------\\
//------------------------------------------------------------------------\\

 sleep 5;

[true, ["tsk_extP"],"", [9400,79,0], "ASSIGNED",-1, true, "heli"] 
call BIS_fnc_taskCreate;
 
 //------------------------------------------------------------------------\\
//--------ENGEGAR MOTORS HELICÒPTERS 1, 2, 3 I REPRODUIR GRABACIÓ---------\\
//------------------------------------------------------------------------\\
 
heli1 engineOn true; 
heli2 engineOn true; 
heli3 engineOn true; 

sleep 15;

rec = [] spawn wp_heli1_inLh;
 
sleep 1;

rec = [] spawn wp_heli2_inLh;

sleep 1; 

rec = [] spawn wp_heli3_inLh; 

//------------------------------------------------------------------------\\
//-------------------PARAR MOTORS HELICÒPTERS 1, 2 I 3--------------------\\
//------------------------------------------------------------------------\\

sleep 118;

heli1 engineOn false; 

sleep 10;

heli2 engineOn false;
 
sleep 6;

heli3 engineOn false; 

//------------------------------------------------------------------------\\
//-------------------MOSTRAR MISSATGE DE L'HELICÒPTER---------------------\\
//------------------------------------------------------------------------\\

[heli1, "Subid a los helicopteros, salimos en 15 segundos"] remoteExec ["sideChat"];

//------------------------------------------------------------------------\\
//-----------------------PASSAR A SEGÜENT FASE (9)------------------------\\
//------------------------------------------------------------------------\\

sleep 15;


missionPhase = 9;

