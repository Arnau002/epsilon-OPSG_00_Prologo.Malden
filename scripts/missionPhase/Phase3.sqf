//------------------------------------------------------------------------\\
//---------------------------------FASE 3---------------------------------\\
//------------------Objectiu Capturat (Intent Extracció)------------------\\
//------------------------------------------------------------------------\\

//------------------------------------------------------------------------\\
//-----------------COMPLETAR TASCA I ASSIGNAR LA SEGÜENT------------------\\
//------------------------------------------------------------------------\\

["tsk_capt","SUCCEEDED"] call BIS_fnc_taskSetState;

sleep 5;

[true, ["tsk_ext"],"", [4058.098,7026.056,0], "ASSIGNED",-1, true, "heli"] 
call BIS_fnc_taskCreate;

//------------------------------------------------------------------------\\
//-------------ENGEGAR MOTOR HELICÒPTER 4 I REPRODUIR GRABACIÓ------------\\
//------------------------------------------------------------------------\\

sleep 142;

heli4 engineOn true;

sleep 20;

 rec = [] spawn wp_heli4_in;
 
//------------------------------------------------------------------------\\
//----------REPRODUIR MUSICA I MOSTRAR MISSATGE DE L'HELICÒPTER-----------\\
//------------------------------------------------------------------------\\
 
 sleep 52;
 
 playMusic "heli4music";
 
 heli4 sidechat "Llegamos en 1 Minuto";
 
//-------------------------------------------------------------------------\\
//----ENGEGAR MOTORS AVIÓ 1, REPRODUIR GRABACIÓ I CANVIAR COMPORTAMENT-----\\
//-------------------------------------------------------------------------\\
 
sleep 32;
 
pln1 engineOn true; 

pln1 setBehaviour "COMBAT";
 
rec = [] spawn wp_pln1;
  
//-------------------------------------------------------------------------\\
//--------------------DESTRUCCIÓ AUXILIAR HELICÒPTER 4---------------------\\
//-------------------------------------------------------------------------\\
 
sleep 45;
 
if (alive heli4) then {heli4 setDamage 1};
 
//-------------------------------------------------------------------------\\
//----------------------------CANCEL·lAR TASCA-----------------------------\\
//-------------------------------------------------------------------------\\
 
sleep 10;
 
["tsk_ext","CANCELED"] call BIS_fnc_taskSetState;
 
//-------------------------------------------------------------------------\\
//----------------------------ELIMINAR AVIÓ 1------------------------------\\
//-------------------------------------------------------------------------\\
 
sleep 43;
 
 {deleteVehicle _x} forEach crew (pln1) + [pln1];
 
 //------------------------------------------------------------------------\\
//-----------------------ASSIGNAR LA SEGÜENT TASCA-------------------------\\
//------------------------------------------------------------------------\\
 
 sleep 17;
 
[true, ["tsk_extO"],"", [3806.252,4920.938,0], "ASSIGNED",-1, true, "heli"] 
call BIS_fnc_taskCreate;
 
 //------------------------------------------------------------------------\\
//-----------------------PASSAR A SEGÜENT FASE (4)------------------------\\
//------------------------------------------------------------------------\\

missionPhase = 4;
 
